                      <div class="w-1 h-1 bg-gray-900 dark:bg-white rounded-full"></div>
                      <div class="w-1 h-1 bg-gray-900 dark:bg-white rounded-full"></div>
                    </div>
                    <div class="text-xs font-semibold text-gray-900 dark:text-white">9:41</div>
                    <div class="flex items-center space-x-1">
                      <div class="w-4 h-2 border border-gray-900 dark:border-white rounded-sm">
                        <div class="w-3 h-1 bg-gray-900 dark:bg-white rounded-sm m-0.5"></div>
                      </div>
                    </div>
                  </div>
                  
                  <!-- App Content -->
